@using BLL;

<div class="box-header with-border">
    <h3 class="box-title">Ações confirmadas/confirmar</h3>
</div>
<!-- /.box-header -->
<form role="form" id="frmConfirmar">

    <div class="box-body table-responsive no-padding">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th style="width: 10px"><input type="checkbox"  id="SelecionarTodos2" name="SelecionarTodos" onclick='selecionarTodos2();' /></th>
                    <th style="width: 10px">#</th>
                    <th>Ação</th>
                    <th>Requerente</th>
                    <th>CPF</th>
                    <th>Confirmada</th>
                </tr>

                @if (Model != null && Model.Acao != null)
            {
                double vQtde = 0;
                int i = 0;

                foreach (var item in Model.Acao)
                {
            <tr class="cpointer">

                @if (item.Ativo == null || item.Ativo.Equals("N"))
                    {
                        <td><input type="checkbox" name="Codigo_@i" value="@item.Codigo" /></td>
                    }
                    else
                    {
                        <td><input type="checkbox" name="Codigo_@i" value="@item.Codigo" checked="checked" /></td>
                    }



                <td class="cpointer">@item.Codigo</td>
                <td class="cpointer">@item.Numeracao</td>
                <td class="cpointer">@item.RequerenteNome</td>
                <td class="cpointer">@item.RequerenteCpf</td>

                @if (item.Ativo == null || item.Ativo.Equals("N"))
                        {
                        <td align="center"><a href="#"><span class="label label-danger">Não</span></a></td>
                        }
                        else
                        {
                        <td align="center"><a href="#"><span class="label label-success">Sim</span></a></td>
                        }
            </tr>

                    vQtde++;
                    i++;
                }

            <tr>
                <td></td>
                <td>@vQtde.ToString("0")<input type="hidden" id="QtdeFiltrado" name="QtdeFiltrado" value="@i" /></td>
                <td>Registros</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>

            </tr>
            }
            </tbody>
        </table>
    </div>

</form>

