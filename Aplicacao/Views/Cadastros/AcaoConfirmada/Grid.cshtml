@using BLL;

<div class="box-header with-border">
    <h3 class="box-title">Resultado da Busca</h3>
</div>
<!-- /.box-header -->
<div class="box-body table-responsive no-padding">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th style="width: 10px"><input type="checkbox" id="SelecionarTodos" name="SelecionarTodos" onclick='selecionarTodos();' /></th>
                <th style="width: 10px">#</th>
                <th>Expira</th>
                <th>Assessoria</th>
                <th>Encerrada</th>
            </tr>

            @if (Model != null && Model.Acao != null)
            {
                double vQtde = 0;
                int i = 0;
                foreach (var item in Model.Acao)
                {
                    <tr class="cpointer">
                        <td><input type="checkbox" name="Codigo_@i" value="@item.Codigo" /></td>
                        <td class="cpointer" onclick="detalhar(@item.Codigo);"><a href="#">@item.Codigo</a></td>
                        <td class="cpointer" onclick="detalhar(@item.Codigo);"><a href="#">@item.ExpiraEm</a></td>
                        <td class="cpointer" onclick="detalhar(@item.Codigo);"><a href="#">@item.AssessoriaNome</a></td>

                        @if (item.Encerrada == null || item.Encerrada.Equals("N"))
                        {
                            <td align="left"><a href="#"><span class="label label-danger">Não</span></a></td>
                        }
                        else
                        {
                            <td align="left"><a href="#"><span class="label label-success">Sim</span></a></td>
                        }

                    </tr>

                    vQtde++;
                    i++;
                }

                <tr>
                    <td></td>
                    <td>@vQtde.ToString("0")<input type="hidden" id="QtdeFiltrado" name="QtdeFiltrado" value="@i" /></td>
                    <td>Selecionado(s)</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>

                </tr>
            }
        </tbody>
    </table>
</div>

