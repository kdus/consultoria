

<!DOCTYPE html>
<html lang="pt-br">
<head>
   <script src="~/Scripts/Sistema/Contas.js"></script>
</head>

<body>
<section class="content">
    <div class="row">

        <div class="col-lg-3 col-6">

            <div class="bg-info">
                <div class="inner">
                    <h2>@Model.Totalfaturamento_peca.ToString("C")</h2>
                    <h3>@string.Format("{0:n2}", Model.PorFatPeca) %</h3>
                    <p>Faturamento Peça</p>
                </div>
                @*<div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>*@
                @*<a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>*@
            </div>

        </div>
        <!-- /.info-box -->
        <div class="col-lg-3 col-6">

            <div class="bg-success">
                <div class="inner">
                    <h2>@Model.Totalfaturamento_maoobra.ToString("C")<sup style="font-size: 20px"></sup></h2>
                    <h3> @string.Format("{0:n2}", Model.PorFatServico) %</h3>
                    <p>Faturamento Serviço</p>


                </div>
                @*<div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>*@
                @*<a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>*@
            </div>

            <!-- /.info-box -->
        </div>

        <div class="col-lg-3 col-6">

            <div class="bg-warning">
                <div class="inner">
                    <h2>@Model.Totalqtd_veiculo</h2>
                    <h3>@string.Format("{0:n2}", Model.PorIndicador)</h3>
                    <p>QTD Atendimento</p>
                </div>
                @*<div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>*@
                @*<a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>*@
            </div>
        </div>

        <div class="col-lg-3 col-6">

            <div class="bg-danger">
                <div class="inner">
                    <h3>@Model.Totalticketmedio.ToString("C")</h3>
                    <h3> @string.Format("{0:n2}", Model.Porticketmedio) %</h3>
                    <p>Ticket Médio</p>
                </div>
                @*<div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>*@
                @*<a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>*@
            </div>
        </div>

    </div>
</section>

<section class="content">
    <div class="row">

        <div class="col-md-6">

            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Total de Faturamento @Model.TOTALFATURAMENTO.ToString("C") </h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div>

                <div style="display: flex; flex-direction:column; align-items: center; justify-content: center; padding-top:10px;">


                    <div>
                        <input type="text" class="knob" id="PorFat" value="@string.Format("{0:n2}", Model.PorFat)" data-skin="tron" data-thickness="0.2" data-angleArc="250" data-angleOffset="-125" data-width="300" data-height="300" readonly>
                    </div>

                    <div style="display: flex; align-items: center; gap: 20px">

                        <div style=" display: flex; gap: 10px">
                            <h3 style="background-color: #007bff; color: #007bff; ">TE</h3>
                            <h3>Normal</h3>
                        </div>

                        <div style=" display: flex; gap: 10px">
                            <h3 style=" background-color: #ffc107; color:#ffc107;">TE</h3>
                            <h3>Bom</h3>
                        </div>

                        <div style=" display: flex; gap: 10px">
                            <h3 style="background-color: #28a745; color: #28a745; ">TE</h3>
                            <h3>Excelente</h3>
                        </div>

                    </div>


                </div>



            </div>


        </div>
        <div class="col-md-6">

            <!-- BAR CHART -->
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">Bar Chart</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div>
                <div class="box-body chart-responsive">
                    <div class="chart" id="bar-chart2" style="height: 300px;"></div>
                </div>
            </div>
            <!-- /.box -->
        </div>

    </div>


</section>



<div class="col-md-12">



    <!--DONUT CHART-->
    <div class="box box-danger">
        <div class="box-header with-border">
            <h3 class="box-title">Metas Comerciais</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
            </div>
        </div>
        <div class="box-body chart-responsive">

            <div class="card-body">
                <div class="row">
                    <div class="col-6 col-md-3 text-center">
                        <input type="text" class="knob" id="PorFatPeca" value="@string.Format("{0:n2}", Model.PorFatPeca)" data-width="150" data-height="150" data-fgColor="#007bff" data-readonly="true">
                        <div class="knob-label"> <strong> Faturamento Peça @Model.Totalfaturamento_peca.ToString("C")</strong></div>
                    </div>

                    <div class="col-6 col-md-3 text-center">
                        <input type="text" class="knob" id="PorFatServico" value="@string.Format("{0:n2}", Model.PorFatServico)" data-width="150" data-height="150" data-fgColor="#28a745" data-readonly="true">
                        <div class="knob-label"><strong>Faturamento Serviço @Model.Totalfaturamento_maoobra.ToString("C")</strong></div>
                    </div>

                    <div class="col-6 col-md-3 text-center">
                        <input type="text" class="knob" id="PorIndicador" value="@string.Format("{0:n2}", Model.PorIndicador)" data-width="150" data-height="150" data-fgColor="#ffc107" data-readonly="true">
                        <div class="knob-label"><strong>QTD Atendimento @Model.Totalqtd_veiculo</strong></div>
                    </div>

                    <div class="col-6 col-md-3 text-center">
                        <input type="text" class="knob" id="Porticketmedio" value="@string.Format("{0:n2}", Model.Porticketmedio)" data-width="150" data-height="150" data-fgColor="#dc3545" data-readonly="true">
                        <div class="knob-label"><strong>Ticket Médio @Model.Totalticketmedio.ToString("C")</strong></div>
                    </div>

                </div>

            </div>

        </div>

    </div>

</div>

</body>
